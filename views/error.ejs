<% layout('/layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="alert alert-danger" role="alert">
            <h2 class="alert-heading">
                <%= err.statusCode %>: <%= err.message %>
            </h2>
            <hr>
            <p class="mb-0">
                <% if (process.env.NODE_ENV !== 'production') { %>
                <%= err.stack %>
                <% } %>
            </p>
        </div>
    </div>
</div>